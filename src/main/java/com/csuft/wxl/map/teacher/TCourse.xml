<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.csuft.wxl.map.teacher.TCourseMap">
	<select id="selectAllByTeacherId" resultType="Course" parameterType="Teacher">
		SELECT
		id,course_time,course_name,course_introduce,course_photo,course_teacher
		FROM sp.course where course_teacher=#{id};
	</select>
</mapper>